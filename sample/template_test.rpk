template something(require name, name2 = "hi", item_suffix = "_shulker_box") {
    def test = "$(name).png"

    match {
        "$(DISPLAY).Name" = "$(name2)"
    } replace {
        items {
            "*$(item_suffix)"
        } = "$(test)"
    }

}

something(name = "test")
something(name = "some other test", name2 = "something i guess")
something(name = "i hate myself", name2 = "fucking")
something(name = "complex shit like this", name2 = "you can even do", item_suffix = "_helmet")