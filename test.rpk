def something = "something"
def something_else = "something else i guess"

template something(require var, name = "hi") {
    match {
        "nbt.display.Name" = "$(var)"
    } for {
        items {
            "*_shulker_box"
        } = "$(name)"
    }
}

match {
    "nbt.display.Name" = "something"
} for {
    items {
        "*_helmet"
    } = "something"

    items {
        "*_chestplate" = "something_else"
    }
}